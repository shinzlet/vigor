<form id="query-area" type="POST" action="/search">
    <div id ="query-block">
        <input type="text" id="textbox" name="query" required>
        <button type="submit"></button>
    </div>
</form>

<h1>search results</h1> 

<section id="results">
    {{#each results}}
        <h1>{{title}}</h1>
        <p>{{{info}}}</p>
    {{/each}}
</section>